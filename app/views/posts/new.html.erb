<h1>New Post</h1>

<% if @post.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@post.errors.count, "error")%> prohibited this user from being created </h2>
    <ul>
    <% @post.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: @post do |form| %>
  <%= form.label :title %>
  <%= form.text_field :title, placeholder: "Title name here" %><br>

  <%= form.label :body %>
  <%= form.text_area :body, rows: 5, cols: 40 %><br>

  <%= form.submit "Submit" %>
<% end %>