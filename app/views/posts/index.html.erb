<h1>All posts</h1>
<ul>
  <% @posts.each do |post| %>
    <div id='posts-container'>
      <li class='post-title'><%= post.title %></li>
      <li class='post-body'><%= post.body %></li>
      <% if user_signed_in? %>
        <li class='user-id'><%= post.user.email %></li>
      <% end%>
      <br>
    </div>
  <% end %>
</ul>
<%= link_to 'Create post', new_post_path %>
<% unless user_signed_in? %>
  <%= link_to 'Sign in to view which user posted', new_user_session_path %>
<% end %>
